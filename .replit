modules = ["nodejs-20", "web", "bash", "python-3.12", "nodejs-24", "postgresql-17", "typescript-language-server", "docker"]
[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:2.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:server"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "gce"
build = ["npm", "run", "build"]
publicDir = "dist"
run = ["sh", "-c", "npm run deploy"]
