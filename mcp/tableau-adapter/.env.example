TABLEAU_BASE_URL=https://tarot.lakefrontdev.com
TABLEAU_API_KEY=sk_your_backend_api_key
PORT=3334
ADAPTER_BIND_HOST=0.0.0.0
# Comma-separated hostnames accepted by host-header validation.
# Example: localhost,127.0.0.1,adapter.example.com
ADAPTER_ALLOWED_HOSTS=
ALLOWED_ORIGIN=*

# Optional OAuth mode for per-user auth
OAUTH_ENABLED=false
# Either OAUTH_ISSUER_URL or OAUTH_METADATA_URL is required when OAUTH_ENABLED=true
OAUTH_ISSUER_URL=
OAUTH_METADATA_URL=
OAUTH_OPENID_CONFIGURATION_URL=
# Public resource server URL for this adapter's MCP endpoint
OAUTH_RESOURCE_SERVER_URL=
# Optional audience override (defaults to OAUTH_RESOURCE_SERVER_URL)
OAUTH_AUDIENCE=
# Optional required scopes (comma-separated)
OAUTH_REQUIRED_SCOPES=
# Optional advertised scopes in protected resource metadata (comma-separated)
OAUTH_SCOPES_SUPPORTED=
# Token verifier mode:
# 1) Introspection mode: set OAUTH_INTROSPECTION_URL (and optional client creds)
OAUTH_INTROSPECTION_URL=
OAUTH_INTROSPECTION_CLIENT_ID=
OAUTH_INTROSPECTION_CLIENT_SECRET=
# 2) JWT verification mode: set OAUTH_JWKS_URI (or rely on metadata jwks_uri)
OAUTH_JWKS_URI=
# Optional issuer override for JWT verification (defaults to metadata issuer)
OAUTH_TOKEN_ISSUER=
# Optional: used to derive local resource URL when OAUTH_RESOURCE_SERVER_URL is unset
ADAPTER_PUBLIC_BASE_URL=
