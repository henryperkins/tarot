{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{ "slug": "primary", "color": "#4A90A4", "name": "Primary" },
				{ "slug": "accent-2", "color": "#E07B39", "name": "Accent" },
